<body id=loginForm class="bg-dark">
  <div class="container">

    <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <img src="<%= asset_path 'trackerM.png'%>"  width="40" height="40" class="d-inline-block align-top" alt=""><h3>Tracker M</h3>
        <p> login </p>
      </div>

      <%= form_for(resource, as: resource_name, id:"Login", url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', id:'inputEmail', placeholder:'Email Address'%>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class:'form-control', id:'inputPassword', placeholder:'Password' %>
          </div>
        </div>

        <div class="form-group">
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </div>

          <div class="actions">
            <%= f.submit "Log in", class:'btn btn-primary' %>
          </div>


      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</body>